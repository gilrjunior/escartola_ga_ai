{
  "builds": [
    {
      "src": "config/wsgi.py",
      "use": "@vercel/python",
      "config": { "runtime": "python3.12" }
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/staticfiles/$1" },
    { "src": "/(.*)", "dest": "config/wsgi.py" }
  ],
  "installCommand": "poetry install --no-interaction --no-ansi",
  "buildCommand": "python manage.py collectstatic --noinput"
}
